@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Ticket Help</h1>
    <p>Please fill out the form below and submit to create a ticket.</p>
      <form method="post" action="Submission.cshtml">
      <label for="Name">Name</label>
      <input type="text" name="myName" id="myName" required="required">
      <label for="Email">Email</label>
      <input type="text" name="myEmail" id="myEmail" required="required">
      <label for="Comments">Comments</label>
      <textarea name="myComments" id="myComments" required="required" rows="2" cols="20"></textarea>
      <input id="mySubmit" type="submit" value="Submit">
      <input type="Reset" value="Reset">
      </form>
</div>
